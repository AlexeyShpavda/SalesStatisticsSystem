@model SalesStatisticsSystem.WebApp.Models.Filters.SaleFilterModel

@using (Ajax.BeginForm("Find", "Sale", new AjaxOptions()
{
    HttpMethod = "GET",
    UpdateTargetId = "updatedTableWithAjax",
    InsertionMode = InsertionMode.Replace
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SaleFilter</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Date", new { @class = "control-label col-md-2" })
