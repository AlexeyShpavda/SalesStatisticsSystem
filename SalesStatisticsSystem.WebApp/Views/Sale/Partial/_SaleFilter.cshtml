                @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "From" } })
                @Html.ValidationMessageFor(model => model.SumFrom, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control", placeholder = "To" } })
                @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Customer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerFilter.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "FirstName" } })
                @Html.ValidationMessageFor(model => model.CustomerFilter.FirstName, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.CustomerFilter.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                @Html.ValidationMessageFor(model => model.CustomerFilter.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Product", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductFilter.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.ProductFilter.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Sum", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SumFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "From" } })
                @Html.ValidationMessageFor(model => model.SumFrom, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.SumTo, new { htmlAttributes = new { @class = "form-control", placeholder = "To" } })
                @Html.ValidationMessageFor(model => model.SumTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Manager", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ManagerFilter.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                @Html.ValidationMessageFor(model => model.ManagerFilter.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
