@using X.PagedList.Mvc;
@using X.PagedList;
@using SalesStatisticsSystem.WebApp.Models.Filters
@using X.PagedList.Mvc.Common
@model IPagedList<SalesStatisticsSystem.WebApp.Models.SaleViewModels.ProductViewModel>

<h3>@ViewBag.Error</h3>

<table class="table" id="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary",
                            onclick = "return confirm('Are you sure you wish to delete this Product?');" })
                    </div>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2">
                No Product List.
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Find", "Product", new ProductFilterModel{ Page = page, Name = ViewBag.ProductFilterNameValue }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "updatedTableWithAjax" }))
