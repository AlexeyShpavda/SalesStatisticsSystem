@model IEnumerable<SalesStatisticsSystem.WebApplication.Models.SaleViewModels.ProductViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>All Sales</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<input class="form-control" type="text" id="inputField" onkeyup="searchFilter()" placeholder="Search by product name." />

<table class="table" id="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Scripts.Render("~/Content/JavaScript/SearchFilter/filter.js")