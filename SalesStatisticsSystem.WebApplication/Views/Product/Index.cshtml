@model IEnumerable<SalesStatisticsSystem.WebApplication.Models.SaleViewModels.ProductViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>All Products</h2>

<p>
    @Html.ActionLink("Create New", "Create", null,new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm("index", "Product", FormMethod.Get))
{
    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default" type="button">Go!</button>
        </span>
        @Html.TextBox("Search", null, new {@class = "form-control"})@*<input class="btn btn-primary" type="submit" value="Search"/>*@
    </div>
}

